<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
            prism:ViewModelLocator.AutowireViewModel="True"
            x:Class="WorkoutPlaner.Views.MainPage"
            Title="Edzés tervező"
            BackgroundColor="#FFD700"
            BarBackgroundColor="#FFD700"
           >


    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Gyakorlatok" 
                 Command="{Binding ExercisesClicked}" 
                 Priority="1"
                 Order="Secondary"/>
        <ToolbarItem Text="Új napi készítése" 
                 Command="{Binding AddDWorkoutPlanClicked}" 
                 Priority="2"
                 Order="Secondary"/>
        <ToolbarItem Text="Új heti készítése" 
                 Command="{Binding AddWWorkoutPlanClicked}" 
                 Priority="3"
                 Order="Secondary"/>
        <ToolbarItem Text="Új havi készítése" 
                 Command="{Binding AddMWorkoutPlanClicked}" 
                 Priority="4"
                 Order="Secondary"/>
    </TabbedPage.ToolbarItems>
    <ContentPage Title="Napi"  >
        <StackLayout>
            <ProgressBar 
                BackgroundColor="Blue"
                HeightRequest="7"
                IsVisible="{Binding ProgresSeen}"
                Progress="{Binding Progress}"/>
            <ListView ItemsSource="{Binding DailyWorkouts}"
                      SelectedItem="{Binding SelectedDWorkout}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout 
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Start">
                                    <Label Text="{Binding Name}" 
                                           FontSize="Medium"
                                           TextColor="Black"
                                           FontAttributes="Italic"/>

                                    <BoxView  
                                        HorizontalOptions="Fill"
                                        HeightRequest="3"
                                        WidthRequest="1"
                                        BackgroundColor="Black"/>
                                </StackLayout>

                            </ViewCell.View>
                          
                        </ViewCell>
                        
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Heti">
        <StackLayout>
            <ProgressBar 
                BackgroundColor="Blue"
                HeightRequest="7"
                IsVisible="{Binding ProgresSeen}"
                Progress="{Binding Progress}"/>
            <ListView ItemsSource="{Binding WeeklyWorkouts}"
                      SelectedItem="{Binding SelectedWWorkout}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout 
                                   HorizontalOptions="Fill"
                                    VerticalOptions="Start">
                                    <Label Text="{Binding Name}" 
                                           FontSize="Medium"
                                           TextColor="Black"
                                           FontAttributes="Italic"/>

                                    <BoxView  
                                        HorizontalOptions="Fill"
                                        HeightRequest="3"
                                        WidthRequest="1"
                                        BackgroundColor="Black"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Havi">
        <StackLayout>
            <ProgressBar 
                BackgroundColor="Blue"
                HeightRequest="7"
                IsVisible="{Binding ProgresSeen}"
                Progress="{Binding Progress}"/>
            <ListView ItemsSource="{Binding MonthlyWorkouts}"
                      SelectedItem="{Binding SelectedMWorkout}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout 
                                   HorizontalOptions="Fill"
                                    VerticalOptions="Start">
                                    <Label Text="{Binding Name}" 
                                           FontSize="Medium"
                                           TextColor="Black"
                                           FontAttributes="Italic"/>

                                    <BoxView  
                                        HorizontalOptions="Fill"
                                        HeightRequest="3"
                                        WidthRequest="1"
                                        BackgroundColor="Black"/>
                                </StackLayout>
                            </ViewCell.View>

                        </ViewCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>

</TabbedPage>